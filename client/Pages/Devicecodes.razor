@page "/devicecodes"
@layout MainLayout
@inherits Blackmail.Pages.DevicecodesComponent

@using Radzen
@using Radzen.Blazor
@using Blackmail.Models.AzureBlackmail
@using Microsoft.AspNetCore.Identity;
@using Blackmail.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]


<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Devicecodes">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenTextBox Placeholder="Search ..." style="display: block; margin-bottom: 10px; width: 100%" Name="Textbox0" @oninput="@(async(args) => {search = $"{args.Value}";await grid0.Reload();})">
        </RadzenTextBox>
        <RadzenGrid @ref="grid0" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" Data="@getDevicecodesResult" Count="@getDevicecodesCount" TItem="Blackmail.Models.AzureBlackmail.Devicecode" LoadData="@Grid0LoadData" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="Blackmail.Models.AzureBlackmail.Devicecode" Property="UserCode" Title="User Code">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Blackmail.Models.AzureBlackmail.Devicecode" Property="DeviceCode1" Title="Device Code">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Blackmail.Models.AzureBlackmail.Devicecode" Property="SubjectId" Title="Subject Id">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Blackmail.Models.AzureBlackmail.Devicecode" Property="ClientId" Title="Client Id">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Blackmail.Models.AzureBlackmail.Devicecode" Property="CreationTime" FormatString="{0:MM/dd/yyyy}" Title="Creation Time">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Blackmail.Models.AzureBlackmail.Devicecode" Property="Expiration" FormatString="{0:MM/dd/yyyy}" Title="Expiration">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Blackmail.Models.AzureBlackmail.Devicecode" Property="Data" Title="Data">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Blackmail.Models.AzureBlackmail.Devicecode" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="blackmailModelsAzureBlackmailDevicecode">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, blackmailModelsAzureBlackmailDevicecode))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
