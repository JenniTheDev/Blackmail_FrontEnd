@page "/all-blackmail"
@layout MainLayout
@inherits Blackmail.Pages.AllBlackmailComponent

@using Radzen
@using Radzen.Blazor
@using Blackmail.Models.BlackmailDb
@using Microsoft.AspNetCore.Identity;
@using Blackmail.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]


@inject Microsoft.Extensions.Localization.IStringLocalizer<AllBlackmail> L
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Datum">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenTextBox Placeholder="Search ..." style="display: block; margin-bottom: 10px; width: 100%" Name="Textbox0" @oninput="@(async(args) => {search = $"{args.Value}";await grid0.Reload();})">
        </RadzenTextBox>
        <RadzenGrid @ref="grid0" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" Data="@getDataResult" Count="@getDataCount" TItem="Blackmail.Models.BlackmailDb.Datum" LoadData="@Grid0LoadData" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="Blackmail.Models.BlackmailDb.Datum" Property="Poster" Title="Poster">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Blackmail.Models.BlackmailDb.Datum" Property="person_being_bmed" Title="Person Being Bmed">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Blackmail.Models.BlackmailDb.Datum" Property="cost_of_removal" Title="Cost Of Removal">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Blackmail.Models.BlackmailDb.Datum" Property="image_path" Title="Image Path">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="Blackmail.Models.BlackmailDb.Datum" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="blackmailModelsBlackmailDbDatum">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, blackmailModelsBlackmailDbDatum))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
